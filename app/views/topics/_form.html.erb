<%= form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br />
    <%= f.select :category_id,Category.all.map{|v|[v.name,v.id]} %>
  </div>
  <%=f.fields_for :detail do |detail| %>
  <div class="field">
    <%= detail.label :content %><br />
    <%= detail.text_area :content,:class => "mceEditor" %>
  </div>
<%end%>
  <div class="field">
    <%= f.label :is_show %><br />
    <%= f.check_box :is_show %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
